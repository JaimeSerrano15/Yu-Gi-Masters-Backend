extends layout

block content
  div(class="buscar")
          div(class="formCarta")
             label(for="selec") Buscar cartas para tu mazo
             br
             form
                select(type="select" placeholder="Busca una carta..." name="selec")
                        for card in cd
                                option(value=card.name)= card.name
             button(class="buscar") Buscar 
             form
             button(class="agregar") Agregar
          h2 Datos de la carta
          div aqui va a ir la informacion de la carta buscada y encontrada
          div(class="mostrarMazo")
  div(class="search")
          label Nombre del mazo: 
          input(type="text" placeholder="Agrega un nombre: " name="titulo")
          div(class="cartas")
             label Cartas agregadas: 
             ul
               li Carta 1
          div(class="botons")
               button(className="BorrarT") Borrar todo
               button(className="Borrar") Borrar carta
               button(className="Guardar") Guardar